{
  "name": "course-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "lsof -ti:3000 | xargs kill -9 2>/dev/null; sleep 1; next dev -H 0.0.0.0",
    "dev:debug": "lsof -ti:3000 | xargs kill -9 2>/dev/null; sleep 1; NODE_OPTIONS='--max-old-space-size=4096' next dev -H 0.0.0.0",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "migrate": "node scripts/run-migrations.js",
    "migrate:show": "cat supabase/migrations/run-all-migrations.sql",
    "migrate:psql": "node scripts/run-migrations-psql.js",
    "dev:clean": "rm -rf .next && next dev -H 0.0.0.0",
    "clean": "rm -rf .next out dist *.tsbuildinfo",
    "reinstall": "rm -rf node_modules package-lock.json && npm cache clean --force && npm install",
    "fix": "npm run reinstall && npm run dev:clean"
  },
  "dependencies": {
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.39.3",
    "date-fns": "^4.1.0",
    "js-cookie": "^3.0.5",
    "next": "^14.2.35",
    "posthog-js": "^1.353.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.7.0",
    "resend": "^6.7.0",
    "sonner": "^2.0.7",
    "swr": "^2.3.7"
  },
  "devDependencies": {
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20.11.24",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "semver": "^7.5.4",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  }
}
